<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtWasteGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your waste reduction goal: 50%"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edtRecycled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWasteGoal"
        android:layout_marginTop="16dp"
        android:hint="Recycled (lbs)"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edtComposted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtRecycled"
        android:layout_marginTop="8dp"
        android:hint="Composted (lbs)"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edtLandfilled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtComposted"
        android:layout_marginTop="8dp"
        android:hint="Landfilled (lbs)"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtLandfilled"
        android:layout_marginTop="16dp"
        android:text="Submit"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmit"
        android:layout_marginTop="16dp"
        android:text="Your waste reduction progress will be displayed here"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
